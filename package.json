{
  "name": "directory-generator",
  "version": "2.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --minify --source-map",
    "start": "ts-node src/index.ts",
    "test": "node dist/index.js --path . --extensions .ts"
  },
  "keywords": [
    "github-actions",
    "directory",
    "documentation"
  ],
  "author": "Deniz Altunkapan",
  "license": "MIT",
  "description": "GitHub Action to generate directory tree markdown documentation",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.36.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  }
}
